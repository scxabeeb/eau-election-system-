@page
@model StudentElectionSystem.Pages.Admin.Candidates.IndexModel

<h3>Candidates</h3>

<a class="btn btn-success mb-3" href="/Admin/Candidates/Create">âž• Add Candidate</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Faculty</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var c in Model.Candidates)
{
        <tr>
            <td>@c.FullName</td>
            <td>@c.Faculty</td>
            <td>@c.Position</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Admin/Candidates/Edit?id=@c.Id">Edit</a>
                <a class="btn btn-sm btn-danger" href="/Admin/Candidates/Delete?id=@c.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
