@page
@model StudentElectionSystemFull.Pages.Admin.Students.UploadModel
@{
    ViewData["Title"] = "Student Upload";
}

<h3 class="fw-bold mb-4">Upload Students</h3>

<div class="card shadow-sm p-4">

    <!-- Download Template -->
    <div class="mb-3">
        <a asp-page-handler="DownloadTemplate"
           class="btn btn-outline-success">
            Download Student Template
        </a>
    </div>

    <hr />

    <form method="post" enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label">Student File (CSV Only)</label>
            <input type="file"
                   asp-for="StudentFile"
                   class="form-control"
                   accept=".csv"
                   required />
        </div>

        <button type="submit" class="btn btn-primary">
            Upload Students
        </button>

    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success mt-3">
            @Model.Message
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
