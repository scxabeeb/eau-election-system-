@page
@model StudentElectionSystem.Pages.Results.ResultsModel
@{
    var totalVotes = Model.Results.Sum(r => r.Votes);
    var winner = Model.Results
        .OrderByDescending(r => r.Votes)
        .FirstOrDefault();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Election Results</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-light">

<div class="container py-5">

    <!-- PAGE TITLE -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">ðŸ“Š Election Results Dashboard</h2>
        <p class="text-muted">Live vote count and candidate performance overview</p>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="row g-3 mb-4">

        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Votes</h6>
                    <h3 class="fw-bold text-primary">@totalVotes</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Total Candidates</h6>
                    <h3 class="fw-bold text-success">@Model.Results.Count</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-muted">Leading Candidate</h6>
                    <h5 class="fw-bold text-danger">
                        @(winner != null ? winner.Name : "N/A")
                    </h5>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4">

        <!-- RESULTS TABLE -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    Candidate Vote Breakdown
                </div>

                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-bordered table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Photo</th>
                                    <th>Candidate</th>
                                    <th>Votes</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var r in Model.Results)
                            {
                                var percentage = totalVotes > 0
                                    ? ((double)r.Votes / totalVotes * 100).ToString("0.0")
                                    : "0";

                                <tr>
                                    <td class="text-center">
                                        <img src="/candidate-images/@r.ImagePath"
                                             width="55"
                                             height="55"
                                             class="rounded-circle border"
                                             onerror="this.src='/candidate-images/default.png'" />
                                    </td>
                                    <td>@r.Name</td>
                                    <td class="fw-bold">@r.Votes</td>
                                    <td>@percentage %</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <!-- BAR CHART -->
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Vote Distribution Chart
                </div>
                <div class="card-body">
                    <canvas id="resultChart"></canvas>
                </div>
            </div>
        </div>

    </div>

</div>

<script>
const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
    Model.Results.Select(r => r.Name)));

const data = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
    Model.Results.Select(r => r.Votes)));

new Chart(document.getElementById("resultChart"), {
    type: 'bar',
    data: {
        labels: labels,
        datasets: [{
            label: 'Votes',
            data: data,
            backgroundColor: 'rgba(13, 110, 253, 0.75)'
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: { display: false }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    precision: 0
                }
            }
        }
    }
});
</script>

</body>
</html>
