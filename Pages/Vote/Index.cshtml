@page "{id:int}"
@model StudentElectionSystem.Pages.Vote.VoteIndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Vote</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e9f2ff);
        }

        .vote-header {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
        }

        .candidate-card {
            transition: all 0.3s ease;
            border-radius: 20px;
            overflow: hidden;
        }

        .candidate-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        .candidate-img {
            height: 260px;
            object-fit: cover;
        }

        .vote-btn {
            border-radius: 50px;
            font-weight: 600;
            padding: 10px;
        }

        .student-badge {
            background: #0d6efd;
            color: white;
            padding: 8px 18px;
            border-radius: 50px;
            font-size: 14px;
        }
    </style>
</head>

<body>

<div class="container py-5">

    <!-- HEADER SECTION -->
    <div class="vote-header text-center mb-5">
        <h2 class="fw-bold mb-3">üó≥Ô∏è Student Election Voting</h2>
        <p class="text-muted mb-3">
            Select your preferred candidate carefully. You can vote only once.
            Dooro musharraxa aad doorbideyso si taxaddar leh. Waxaad codeyn kartaa hal mar oo keliya.
        </p>

        <span class="student-badge">
            Student ID: @Model.StudentId
        </span>
    </div>

    <!-- VOTING FORM -->
    <form method="post">
        <input type="hidden" name="studentId" value="@Model.StudentId" />

        <div class="row justify-content-center g-4">

            @foreach (var c in Model.Candidates)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card candidate-card shadow-sm h-100 text-center">

                        <img src="/candidate-images/@c.ImagePath"
                             class="card-img-top candidate-img"
                             onerror="this.src='/candidate-images/default.png'" />

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@c.FullName</h5>
                            <p class="text-primary fw-semibold">@c.Position</p>
                            <p class="text-muted small">
                                Vote for leadership, integrity, and vision.
                            </p>
                        </div>

                        <div class="card-footer bg-white border-0 pb-4 px-4">
                            <button type="submit"
                                    name="candidateId"
                                    value="@c.Id"
                                    class="btn btn-success vote-btn w-100">
                                ‚úÖ Cast Vote
                            </button>
                        </div>

                    </div>
                </div>
            }

        </div>
    </form>

</div>

</body>
</html>
